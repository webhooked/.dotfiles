// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "icon_theme": "Colored Zed Icons Theme Dark",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "languages": {
    "TypeScript": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "TSX": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    },
    "JavaScript": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      }
    }
  },
  "lsp": {
    "biome": {
      "settings": {
        "config_path": "./biome.json"
      }
    }
  },
  "soft_wrap": "editor_width",
  "format_on_save": "on",
  "multi_cursor_modifier": "cmd_or_ctrl",
  "project_panel": {
    "dock": "right",
    "auto_fold_dirs": false
  },
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-thinking-latest"
    },
    "dock": "left",
    "version": "2"
  },
  "ui_font_size": 12,
  "ui_font_family": "SF Pro Text",
  "buffer_font_size": 14,
  "buffer_font_family": "Berkeley Mono Variable",
  "buffer_line_height": { "custom": 1.5 },
  "buffer_font_features": {
    "ligatures": true
  },
  "terminal": {
    "dock": "bottom",
    "font_family": "Berkeley Mono Variable",
    "font_size": 13
  },
  "vim_mode": true,
  "relative_line_numbers": true,
  "cursor_blink": false,
  "vertical_scroll_margin": 10,
  "theme": {
    "mode": "system",
    "light": "Tokyo Night Storm",
    "dark": "Tokyo Night Noir"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "scrollbar": {
    "show": "never"
  },
  "vim": {
    "use_system_clipboard": "always"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "diagnostics": { "inline": { "enabled": true } },
  "confirm_quit": true,
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": false,
    "show_other_hints": false
  },
  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "notification_panel": {
    "button": true
  },
  "gutter": {
    "folds": false
  },
  "minimap": { "show": "always" }
}
