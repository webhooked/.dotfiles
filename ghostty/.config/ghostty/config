# Theme
window-theme = system
theme = dark:poimandresish,light:poimandresish-storm
background-opacity = 0.96
background-blur = 64

font-family = "Berkeley Mono Variable"
font-style = "Retina SemiCondensed"
font-size = 14

# Cursor
cursor-style = block
cursor-style-blink = true
adjust-cell-height = 25%
adjust-cursor-height = 25%
adjust-underline-position = 40%
adjust-underline-thickness = -60%

# Shell
shell-integration=zsh
shell-integration-features = no-cursor
window-save-state=always

# Window
macos-titlebar-style = hidden
macos-titlebar-proxy-icon = hidden
macos-icon = glass

# Clipboard settings
clipboard-read = allow
clipboard-write = allow
copy-on-select = clipboard

# Keybinds
keybind = cmd+shift+-=new_split:right
keybind = cmd+-=new_split:down
keybind = cmd+shift+h=new_split:left
keybind = cmd+shift+j=new_split:down
keybind = cmd+shift+k=new_split:up
keybind = cmd+shift+l=new_split:right
keybind = cmd+h=goto_split:left
keybind = cmd+j=goto_split:down
keybind = cmd+k=goto_split:up
keybind = cmd+l=goto_split:right
keybind = cmd+z=toggle_split_zoom
keybind = cmd+left=resize_split:left,20
keybind = cmd+down=resize_split:down,20
keybind = cmd+up=resize_split:up,20
keybind = cmd+right=resize_split:right,20
keybind = global:cmd+grave_accent=toggle_quick_terminal

# Shaders
custom-shader = shaders/cursor_smear.glsl

# Other
unfocused-split-opacity = 1
quit-after-last-window-closed = true
mouse-scroll-multiplier = 0.4
confirm-close-surface = always

# Updates
auto-update-channel=stable
